#!/usr/bin/env bash
# Script that changes localhost and facebook.com IPs

# Ensure the script is run as root
if [ "$EUID" -ne 0 ]; then
  echo "Please run as root"
  exit 1
fi

# Backup /etc/hosts
cp /etc/hosts /etc/hosts.bak

# Remove old localhost/facebook.com lines and save to temp file
grep -vE 'localhost|facebook.com' /etc/hosts > /tmp/hosts.tmp

# Add new entries
echo "127.0.0.2 localhost" >> /tmp/hosts.tmp
echo "8.8.8.8 facebook.com" >> /tmp/hosts.tmp

# Overwrite /etc/hosts safely (ShellCheck-friendly)
sudo sh -c 'cat /tmp/hosts.tmp > /etc/hosts'
